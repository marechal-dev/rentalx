{
  "compilerOptions": {
		"target": "es2017",
    "module": "commonjs",
    "outDir": "./dist",
		"moduleResolution": "node",
		"resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
		"emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
		"baseUrl": "./src",
		"paths": {
			"@Configs/*": ["config/*"],
			"@Shared/*": ["shared/*"],
			"@Errors/*": ["errors/*"],
			"@Database/*": ["database/*"],
			"@Modules/*": ["modules/*"],
			"@Utils/*": ["utils/*"]
		}
  }
}
